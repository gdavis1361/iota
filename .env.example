# Core settings
APP_NAME=iota
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=development  # Valid values: development, staging, production
LOG_LEVEL=INFO
LOG_FORMAT=json
CORRELATION_ID_HEADER=X-Correlation-ID
SECRET_KEY=your-secret-key-here  # Required: Generate a strong secret key
ALLOWED_HOSTS=["localhost", "127.0.0.1"]  # JSON array format

# Sentry settings
SENTRY_ENABLED=true
SENTRY_DSN=https://your-public-key@your-org.ingest.sentry.io/your-project-id
SENTRY_ENVIRONMENT=development
SENTRY_DEBUG=false
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1
SENTRY_MAX_BREADCRUMBS=100
SENTRY_METADATA={"environment": "development", "region": "us-east-1"}

# Performance monitoring settings
SLOW_REQUEST_THRESHOLD_MS=1000.0
ERROR_RATE_THRESHOLD=0.1
SLOW_RATE_THRESHOLD=0.1
SAMPLING_WINDOW_SECONDS=60
