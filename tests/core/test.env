APP_NAME=test-app
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=test
LOG_LEVEL=INFO
LOG_FORMAT=json
CORRELATION_ID_HEADER=X-Correlation-ID
SECRET_KEY=test-secret-key
ALLOWED_HOSTS=["*"]

# Sentry Configuration
SENTRY_ENABLED=true
SENTRY_DSN=https://test@test.ingest.sentry.io/test
SENTRY_ENVIRONMENT=test
SENTRY_RELEASE=1.0.0-test
SENTRY_SERVER_NAME=test-server
SENTRY_TRACES_SAMPLE_RATE=1.0
SENTRY_PROFILES_SAMPLE_RATE=1.0
SENTRY_MAX_BREADCRUMBS=100
SENTRY_DEBUG=true
SENTRY_METADATA={"test_key": "test_value"}

# Performance Monitoring
SLOW_REQUEST_THRESHOLD_MS=1000
ERROR_RATE_THRESHOLD=0.1
SLOW_RATE_THRESHOLD=0.1
SAMPLING_WINDOW_SECONDS=60
